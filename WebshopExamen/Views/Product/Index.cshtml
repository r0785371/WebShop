
@model List<Model.Product>;
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Product";
    int nummer = 1;
}


<h1>Producten:</h1>


<div class="container-md">
    
    @foreach (var item in Model)
    {
        var imgNr = "/images/bikes/Riese_" + nummer + ".png";
        <div class="col-md-4">
            <div class="card mb-4 box-shadow">
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&amp;bg=55595c&amp;fg=eceeef&amp;text=Thumbnail" alt="Thumbnail [100%x225]" style="height: 225px; width: 100%; display: block;" src="@imgNr" data-holder-rendered="true">
                <div class="card-body">
                    <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                    <p class="card-text">Price : @item.Price €</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Product" asp-action="BuyProduct" asp-route-productId="@item.ProductId">Buy</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Product" asp-action="Edit" asp-route-productId="@item.ProductId">Edit</a>
                            @*<button type="button" class="btn btn-sm btn-outline-secondary">Buy</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>*@
                        </div>
                        <small class="text-muted">&copy;"Riese und Müller</small>
                    </div>
                </div>
            </div>
        </div>



        <p>@item.Name</p>

        nummer++;
    }
</div>


