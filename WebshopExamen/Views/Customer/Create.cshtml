@model Model.Customer
@{
    ViewData["Title"] = "Customer/Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer/Create</h1>
<form asp-action="Create">
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Firstname">@Html.DisplayNameFor(model => model.Firstname): </label>
            <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname" required />
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-4 mb-3">
            <label asp-for="Name">@Html.DisplayNameFor(model => model.Name): </label>
            <input type="text" class="form-control" asp-for="Name" placeholder="Name" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary" value="Create">Create</button>
    <button class="btn btn-primary" asp-controller="Customer" asp-action="Index" formnovalidate>Back to list</button>

</form>
